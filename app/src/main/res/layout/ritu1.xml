<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="शब्दांवर क्लिक करा आणि उच्चार ऐका"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTala"
            android:text="तला"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnKumar"
            android:text="कुमार"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnRumal"
            android:text="रुमाल"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnSabak"
            android:text="सबक"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <!-- Add more words -->
        <Button
            android:id="@+id/btnPal"
            android:text="पल"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnTap"
            android:text="तप"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnSan"
            android:text="सन"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

        <Button
            android:id="@+id/btnKapas"
            android:text="कापस"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"/>

    </LinearLayout>
</ScrollView>
