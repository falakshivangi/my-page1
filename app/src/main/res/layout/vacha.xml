<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="१) पाऊस कसा आला?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <RadioGroup
            android:id="@+id/q1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/q1_opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="सरसर सरसर" />
            <RadioButton
                android:id="@+id/q1_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="टपटप टपटप" />
            <RadioButton
                android:id="@+id/q1_opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="हळूहळू" />
        </RadioGroup>

        <!-- Question 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="२) पाऊस कोण कोण बघत आहे?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <RadioGroup
            android:id="@+id/q2_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/q2_opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="फक्त कुमार" />
            <RadioButton
                android:id="@+id/q2_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="काका, काकू, कुमार, पूनम" />
            <RadioButton
                android:id="@+id/q2_opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="फक्त काका" />
        </RadioGroup>

        <!-- Question 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="३) पाऊस आल्यावर काय होते?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/q3_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="तुझे उत्तर इथे लिहा" />

        <!-- Question 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="४) पाऊस आला नाही तर काय होईल?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/q4_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="तुझे उत्तर इथे लिहा" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="उत्तर सबमिट करा"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
