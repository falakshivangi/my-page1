<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
        <ImageView android:id="@+id/imagePuzzle" android:layout_width="400dp" android:layout_height="200dp" android:src="@drawable/shb" android:contentDescription="शब्दबाग चित्र" android:layout_marginBottom="16dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="शेवटी 'ा' येणारे शब्द लिहा:" android:textSize="18sp"/>
        <EditText android:id="@+id/wordA1" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(1)"/>
        <EditText android:id="@+id/wordA2" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(2)"/>
        <EditText android:id="@+id/wordA3" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(3)"/>
        <EditText android:id="@+id/wordA4" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(4)"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="शेवटी 'ई' येणारे शब्द लिहा:" android:textSize="18sp" android:layout_marginTop="16dp"/>
        <EditText android:id="@+id/wordE1" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(1)"/>
        <EditText android:id="@+id/wordE2" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(2)"/>
        <EditText android:id="@+id/wordE3" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(3)"/>
        <EditText android:id="@+id/wordE4" android:layout_width="match_parent" android:layout_height="48dp" android:hint="(4)"/>
        <Button android:id="@+id/submitButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="सबमिट करा" android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>