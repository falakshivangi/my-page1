<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <!--  Toggle Button  -->
        <ToggleButton android:id="@+id/toggle_pronounce" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOn="उच्चार सुरू" android:textOff="उच्चार सुरू" android:layout_marginBottom="16dp"/>
        <TextView android:text="चित्रे बघा, नावे सांगा व दाखवा." android:textSize="20sp" android:textColor="#0000FF" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <!--  ध Section  -->
        <TextView android:layout_width="58dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="ध" android:textStyle="bold" android:textColor="#D32F2F" android:textSize="36sp"/>
        <!--  धरण  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="133dp" android:layout_marginTop="8dp" android:orientation="horizontal">
            <ImageView android:id="@+id/ss1" android:layout_width="120dp" android:layout_height="match_parent" android:contentDescription="धरण" android:src="@drawable/ddd"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView android:id="@+id/text_dam" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="धरण" android:textSize="24sp" android:layout_marginEnd="8dp"/>
                <ImageButton android:id="@+id/speak_dam" android:layout_width="48dp" android:layout_height="48dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_btn_speak_now" android:contentDescription="Speak Dam"/>
            </LinearLayout>
        </LinearLayout>
        <!--  धोतर  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="137dp" android:layout_marginTop="8dp" android:orientation="horizontal">
            <ImageView android:id="@+id/image_dhotra" android:layout_width="118dp" android:layout_height="match_parent" android:contentDescription="धोतर" android:src="@drawable/flower"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView android:id="@+id/text_dhotra" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="धोतर" android:textSize="24sp" android:layout_marginEnd="8dp"/>
                <ImageButton android:id="@+id/speak_dhotra" android:layout_width="48dp" android:layout_height="48dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_btn_speak_now" android:contentDescription="Speak Dhotra"/>
            </LinearLayout>
        </LinearLayout>
        <!--  य Section  -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="य" android:textStyle="bold" android:textColor="#F57C00" android:textSize="36sp"/>
        <!--  याक  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="107dp" android:layout_marginTop="8dp" android:orientation="horizontal">
            <ImageView android:id="@+id/image_yak" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="याक" android:src="@drawable/bb"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView android:id="@+id/text_yak" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="याक" android:textSize="24sp" android:layout_marginEnd="8dp"/>
                <ImageButton android:id="@+id/speak_yak" android:layout_width="48dp" android:layout_height="48dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_btn_speak_now" android:contentDescription="Speak Yak"/>
            </LinearLayout>
        </LinearLayout>
        <!--  यान  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="112dp" android:layout_marginTop="8dp" android:orientation="horizontal">
            <ImageView android:id="@+id/image_rocket" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="यान" android:src="@drawable/roket"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView android:id="@+id/s1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="यान" android:textSize="24sp" android:layout_marginEnd="8dp"/>
                <ImageButton android:id="@+id/speak_rocket" android:layout_width="48dp" android:layout_height="48dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_btn_speak_now" android:contentDescription="Speak Rocket"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>