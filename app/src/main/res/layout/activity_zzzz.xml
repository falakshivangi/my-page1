<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="योग्य जोड्या जुळवा"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_kavla"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="कावळा"
            android:padding="8dp"
            android:src="@drawable/crow"
            android:tag="कावळा" />

        <ImageView
            android:id="@+id/image_sasa"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:contentDescription="ससा"
            android:padding="8dp"
            android:src="@drawable/rabbit"
            android:tag="ससा" />

        <ImageView
            android:id="@+id/image_math"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="माठ"
            android:padding="8dp"
            android:src="@drawable/math"
            android:tag="माठ" />

        <ImageView
            android:id="@+id/image_bhendi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="भेंडी"
            android:padding="8dp"
            android:src="@drawable/bhindi"
            android:tag="भेंडी" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/target_sasa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:tag="ससा"
            android:text="ससा"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/target_bhendi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:tag="भेंडी"
            android:text="भेंडी"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/target_kavla"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:tag="कावळा"
            android:text="कावळा"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/target_math"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:tag="माठ"
            android:text="माठ"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
