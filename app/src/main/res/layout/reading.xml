<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Lesson Image -->
        <ImageView
            android:id="@+id/lessonImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ballons" />

        <!-- Lesson Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="काका आला.\nमामा आला.\nलाला आला.\nकाल आलम आला."
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="16dp" />

        <!-- Q1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n१) आलम कधी आला?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q1Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q1Opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="काल आला" />

            <RadioButton
                android:id="@+id/q1Opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="आज आला" />

            <RadioButton
                android:id="@+id/q1Opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="उद्या येईल" />
        </RadioGroup>

        <!-- Q2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n२) कोण कोण आले?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q2Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q2Opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="काका, मामा, लाला, आलम" />

            <RadioButton
                android:id="@+id/q2Opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="फक्त काका आणि मामा" />

            <RadioButton
                android:id="@+id/q2Opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="फक्त लाला आणि आलम" />
        </RadioGroup>

        <!-- Q3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n३) मगले जण का बरे आले असतील?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q3Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q3Opt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="भेटायला आले" />

            <RadioButton
                android:id="@+id/q3Opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="खेळायला आले" />

            <RadioButton
                android:id="@+id/q3Opt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="फिरायला आले" />
        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सबमिट"
            android:layout_marginTop="20dp" />

        <!-- Result Text -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
